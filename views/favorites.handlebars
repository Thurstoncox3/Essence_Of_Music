<div class="row">
    <div class='p-3 text-white bg-dark col-4'>
        <h2>What's your Vibe</h2>
        <h4>{{genres.genre_name}}</h4>
    </div>
    <div class="gallery col-8 row">  
    {{#each genres.artists as |artist|}}
    {{> genre-detail}}
    {{/each}}
    </div>
</div>

<section class="py-2">
     <div class="col mb-4">
         <div class="card">
             <a href="/artist/{{id}}">
             <div class="card-body"> 
             <h5 class="card-title text-center">{{artist_name}}</h5> 
             <img src="/assets/artCovers/{{image}} " class="card-img-top img-fluid rounded mx-auto d-block" alt="{{image}}" style="width: 300px; height: 300px">                 
             </div>
             </a>
         </div> 
     </div>  
 </section>